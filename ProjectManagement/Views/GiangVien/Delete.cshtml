@using ProjectManagement.Models
@model ProjectManagement.Models.GiangVien

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <h1>Delete</h1>
</section>
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Bạn có chắc muốn xóa?</h3>
        </div>
        <dl class="dl-horizontal">
            <dt>
                Mã Giảng Viên:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.GiangVienId)
            </dd>
            <dt>
                Tên Giảng Viên:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.HoTen)
            </dd>
            <dt>
                Giới Tính:
            </dt>
            <dd>
                @if (Model.GioiTinh == true)
                {
                    @Html.DisplayName("Nam")
                }
                else
                {
                    @Html.DisplayName("Nu")
                }
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="box-footer">
                @*<button type="submit" class="btn btn-default">Cancel</button>*@
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                <input type="submit" value="Delete" class="btn btn-primary pull-right" />
            </div>
        }
    </div>
</section>