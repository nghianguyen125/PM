@model ProjectManagement.Models.PhanSinhVienChoDotKhoaLuan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string tenDotKhoaLuan = ViewBag.TenDotKhoaLuan + "";
    string idDotKhoaLuan = ViewBag.IdDotKhoaLuan + "";
}

<section class="content-header">
    <h1>Cập nhật </h1>
</section>
<section class="content">
    @{
        int countError = ViewBag.CountError != null ? (int)ViewBag.CountError : 0;
        if (countError > 0)
        {
            @Html.ValidationSummary(true)
            @Html.ValidationMessage("error", "", new { @class = "alert alert-danger alert-dismissable", style = "text-align:left; display: block" })
        }
    }
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title"><strong>@tenDotKhoaLuan</strong></h3>
        </div>
        @using (Html.BeginForm("Edit", "PhanSinhVienChoDotKhoaLuan", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.DotKhoaLuanId)
            @Html.HiddenFor(model => model.SinhVienId)
            <div class="form-group">
                @Html.Label("Ngày Bắt đầu", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.NgayPhan, "{0:dd/MM/yyyy}", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NgayPhan)
                </div>
            </div>
                <div class="box-footer">
                    @*<button type="submit" class="btn btn-default">Cancel</button>*@
                    @*@Html.ActionLink("Back to List", "DSSV", null, new { @class = "btn btn-default" })*@
                    <a href="/Admin/PhanSinhVienChoDotKhoaLuan/DSSV?DId=@idDotKhoaLuan" class="btn btn-default">Back to List</a>
                    <input type="submit" value="Save" class="btn btn-primary pull-right" />
                </div>
        }
    </div>

</section>
