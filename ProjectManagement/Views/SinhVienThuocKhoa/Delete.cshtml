@model ProjectManagement.Models.SinhVienThuocKhoa

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string idKhoa = ViewBag.IdKhoa + "";
}
<section class="content-header">
    <h1>Xóa Sinh Viên Khỏi Khoa</h1>
</section>
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Bạn có chắc muốn xóa?</h3>
        </div>
        <dl class="dl-horizontal">
            <dt>
                Mã Khoa
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Khoa.TenKhoa)
            </dd>
            <dt>
                Tên Sinh viên
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SinhVien.HoTen)
            </dd>
            <dt>
                Ngày Sinh
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SinhVien.NgaySinh)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="box-footer">
                @*<button type="submit" class="btn btn-default">Cancel</button>*@
                @*@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })*@
                <a href="/Admin/SinhVienThuocKhoa/DSSV?KId=@idKhoa" class="btn btn-primary pull-left">Back to List</a>
                <input type="submit" value="Delete" class="btn btn-primary pull-right" />
            </div>
        }
    </div>
</section>
