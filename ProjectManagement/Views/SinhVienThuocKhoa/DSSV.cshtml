@using ProjectManagement.Models
@model IEnumerable<ProjectManagement.Models.SinhVienThuocKhoa>

@{
    ViewBag.Title = "DSSV";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string tenKhoa = ViewBag.TenKhoa + "";
    string idKhoa = ViewBag.KhoaId + "";
}

<section class="content-header">
    <h1>Sinh Viên / Khoa</h1>
</section>
<section class="content">
    <h1>@tenKhoa</h1>
    <div class="row" style="padding-bottom: 10px;">
        <div class="col-md-12">
            @*@Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary pull-left" })*@
            <a href="/SinhVienThuocKhoa/Create?KId=@idKhoa" class="btn btn-primary pull-left">Tạo mới</a>
        </div>
    </div>
    <div class="box">
        <table class="table table-hover table-bordered">
            <tbody>
                <tr>
                    <th style="width: 50px">STT</th>
                    <th>
                        Mã Sinh viên
                    </th>
                    <th>
                        Tên Sinh viên
                    </th>
                    <th>
                        Ngày sinh
                    </th>
                    <th>
                        Ngày Bắt đầu
                    </th>
                    <th style="width: 50px; text-align: center">Chức năng</th>
                </tr>
                @{
                    int stt = 0;
                    ProjectManagementEntities db = new ProjectManagementEntities();
                }
                @foreach (var item in Model)
                {
                    stt++;
                    List<SinhVienThuocKhoa> userCreatedBy = db.SinhVienThuocKhoas.ToList();
                    <tr>
                        <td>@stt</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SinhVienId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SinhVien.HoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SinhVien.NgaySinh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TuNgay)
                        </td>
                        <td align="center">
                            @*@Html.ActionLink("Sửa", "Edit", new {id = item.USER_ID}) |
                                @Html.ActionLink("Xóa", "Delete", new {id = item.USER_ID})*@
                            <ul class="contro_function" style="width: 70px">
                                <li>
                                    <a title="Chỉnh Sửa" href="@Url.Action("Edit", new { KId = item.KhoaId, SVId = item.SinhVienId })">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </li>
                                <li>|</li>
                                <li>
                                    <a title="Xóa" href="@Url.Action("Delete", new { KId = item.KhoaId, SVId = item.SinhVienId })">
                                        <i class="fa fa-remove" style="color:red;"></i>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
