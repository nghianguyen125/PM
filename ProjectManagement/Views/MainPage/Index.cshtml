@using ProjectManagement.Models
@model List<ProjectManagement.Models.QuanLyLich>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string idGiangVien = ViewBag.IdGiangVien + "";
}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href='https://fonts.googleapis.com/css?family=Playfair+Display:700,900|Fira+Sans:400,400italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/css/reset1.css"> <!-- CSS reset -->
    <link rel="stylesheet" href="~/css/style2.css"> <!-- Resource style -->
    <script src="js/modernizr.js"></script> <!-- Modernizr -->
@{
    ProjectManagementEntities db = new ProjectManagementEntities();
    int i = 0;
}
<section class="cd-horizontal-timeline">
    <div class="timeline">
        <div class="events-wrapper">
            <div class="events">
                <ol>
                    @foreach (var item in Model)
                    {
                        if (i == 0)
                        {
                            <li><a href="#0" data-date="@DateTime.Parse(@item.MocThoiGian+"").ToString("dd/MM/yyyy")" class="selected">@DateTime.Parse(@item.MocThoiGian + "").ToString("dd/MM/yyyy")</a></li>
                        }
                        else
                        {
                            <li><a href="#0" data-date="@DateTime.Parse(@item.MocThoiGian+"").ToString("dd/MM/yyyy")">@DateTime.Parse(@item.MocThoiGian + "").ToString("dd/MM/yyyy")</a></li>
                        }
                        i++;
                    }
                </ol>
                <span class="filling-line" aria-hidden="true"></span>
            </div> <!-- .events -->
        </div> <!-- .events-wrapper -->

        <ul class="cd-timeline-navigation">
            <li><a href="#0" class="prev inactive">Prev</a></li>
            <li><a href="#0" class="next">Next</a></li>
        </ul> <!-- .cd-timeline-navigation -->
    </div> <!-- .timeline -->
    <div class="events-content">
        <ol>
            @{
                i = 0;
            }
            @foreach (var item in Model)
            {
                if (i == 0)
                {
                    <li class="selected" data-date="@DateTime.Parse(@item.MocThoiGian+"").ToString("dd/MM/yyyy")">
                        <h2>@item.TieuDe</h2>
                        <em>@DateTime.Parse(@item.MocThoiGian + "").ToString("dd/MM/yyyy")</em>
                        <p>
                            @item.NoiDung
                        </p>
                    </li>
                }
                else
                {
                    <li data-date="@DateTime.Parse(@item.MocThoiGian+"").ToString("dd/MM/yyyy")">
                        <h2>@item.TieuDe</h2>
                        <em>@DateTime.Parse(@item.MocThoiGian + "").ToString("dd/MM/yyyy")</em>
                        <p>
                            @item.NoiDung
                        </p>
                    </li>
                }
                i++;
            }

        </ol>
    </div> <!-- .events-content -->
</section>

<script src="~/js/jquery-2.1.4.js"></script>
<script src="~/js/jquery.mobile.custom.min.js"></script>
<script src="~/js/main.js"></script> <!-- Resource jQuery -->
