@model ProjectManagement.Models.NamHoc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>Năm Học / Học Kỳ</h1>
</section>
<section class="content">
    @{
        int countError = ViewBag.CountError != null ? (int)ViewBag.CountError : 0;
        if (countError > 0)
        {
            @Html.ValidationSummary(true)
            @Html.ValidationMessage("error", "", new { @class = "alert alert-danger alert-dismissable", style = "text-align:left; display: block" })
        }
    }
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Cập nhật Năm Học</h3>
        </div>
        @using (Html.BeginForm("Edit", "NamHoc", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="box-body">

                @Html.HiddenFor(model => model.NamHocHocKyId)
                <div class="form-group">
                    @Html.Label("Mã Năm học", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.NamHocHocKyId, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.NamHocHocKyId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Chi tiết", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TenNamHocHocKy, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.TenNamHocHocKy)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Ngày Bắt đầu", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TuNgay, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.TuNgay)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Ngày Kết thúc", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.DenNgay, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.DenNgay)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Root", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.NamHocHocKyIdRoot, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.NamHocHocKyIdRoot)
                    </div>
                </div>

            </div>
            <div class="box-footer">
                @*<button type="submit" class="btn btn-default">Cancel</button>*@
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                <input type="submit" value="Save" class="btn btn-primary pull-right" />
            </div>
        }
    </div>

</section>
