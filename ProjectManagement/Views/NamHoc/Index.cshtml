@using ProjectManagement.Models
@model PagedList.IPagedList<ProjectManagement.Models.NamHoc>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>
        Năm Học
    </h1>
</section>
<section class="content">
    <div class="row" style="padding-bottom: 10px;">
        <div class="col-md-12">
            @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-primary pull-left" })
            @using (Html.BeginForm("index", "NamHoc", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form" }))
            {
                <div class="form-group">
                    @Html.TextBox("searchString", null, new { @class = "form-control", placeholder = "Tìm kiếm năm học" })
                </div>
                <div class="form-group">
                    <button type="submit" value="Search" class="btn btn-default hidden-xs"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            }
        </div>
    </div>
    <div class="box">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th style="width: 50px; text-align: center;"> STT </th>
                    <th> Mã Năm Học </th>
                    <th> Chi Tiết </th>
                    <th> Ngày Bắt đầu </th>
                    <th> Ngày Kết thúc </th>
                    <th> Root </th>
                    <th style="width: 10%; text-align: center;"> Chỉnh Sửa </th>
                </tr>
            </thead>
            <tbody>
                @{
                    int stt = 0;
                    ProjectManagementEntities db = new ProjectManagementEntities();
                }
                @foreach (var item in Model)
                {
                    stt++;
                    List<NamHoc> namHoc = db.NamHocs.ToList();
                    <tr>
                        <td style="text-align: center;">@stt</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NamHocHocKyId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenNamHocHocKy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TuNgay)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DenNgay)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NamHocHocKyIdRoot)
                        </td>
                        <td style="text-align: center;">
                            <ul class="contro_function">
                                <li>
                                    <a title="Cập nhật" href="@Url.Action("Edit", new { id = item.NamHocHocKyId })">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </li>
                                <li>|</li>
                                <li>
                                    <a title="Xóa" href="@Url.Action("Delete", new { id = item.NamHocHocKyId})">
                                        <i class="fa fa-remove" style="color:red;"></i>
                                    </a>
                                </li>
                            </ul>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        <div style="text-align:center">
            @*Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount*@
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
        </div>
    </div>
</section>