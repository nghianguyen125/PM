@model ProjectManagement.Models.PhanDeTaiChoDotKhoaLuan

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string idDotKhoaLuan = ViewBag.IdDotKhoaLuan + "";
}
<section class="content-header">
    <h1>Xóa Đề Tài Khỏi Đợt Khóa Luận</h1>
</section>
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Bạn có chắc muốn xóa?</h3>
        </div>
        <dl class="dl-horizontal">
            <dt>
                Mã Đề Tài
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DeTaiId)
            </dd>
            <dt>
                Tên Đề Tài
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DeTai.TenDeTai)
            </dd>
            <dt>
                Mô Tả
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DeTai.MoTa)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="box-footer">
                @*<button type="submit" class="btn btn-default">Cancel</button>*@
                @*@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })*@
                <a href="/Admin/PhanDeTaiChoDotKhoaLuan/DSDT?KHId=@idDotKhoaLuan" class="btn btn-primary pull-left">Back to List</a>
                <input type="submit" value="Delete" class="btn btn-primary pull-right" />
            </div>
        }
    </div>
</section>
