@model ProjectManagement.Models.PhanDeTaiChoDotKhoaLuan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string tenDotKhoaLuan = ViewBag.TenDotKhoaLuan + "";
    string idDotKhoaLuan = ViewBag.IdDotKhoaLuan + "";
}

<section class="content-header">
    <h1>Cập nhật đề tài</h1>
</section>
<section class="content">
    @{
        int countError = ViewBag.CountError != null ? (int)ViewBag.CountError : 0;
        if (countError > 0)
        {
            @Html.ValidationSummary(true)
            @Html.ValidationMessage("error", "", new { @class = "alert alert-danger alert-dismissable", style = "text-align:left; display: block" })
        }
    }
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title"><strong>@tenDotKhoaLuan</strong></h3>
        </div>
        @using (Html.BeginForm("Edit", "PhanDeTaiChoDotKhoaLuan", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.DeTaiId)
            <div class="form-group">
                @Html.Label("Đợt Khóa Luận", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("DotKhoaLuanId", null, String.Empty, new { @class = "form-control", required = "required", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.DotKhoaLuanId)
                </div>
            </div>
                <div class="form-group">
                    @Html.Label("Tên Đề Tài", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("DeTaiId", null, String.Empty, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.DeTaiId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Ngày Phân Đề Tài", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*<input type="date" value="submit" id="TuNgay"/>*@
                        @Html.TextBoxFor(model => model.NgayPhanDeTai, new { @class = "form-control", type = "date", required = "required" })
                        @Html.ValidationMessageFor(model => model.NgayPhanDeTai)
                    </div>
                </div>
                <div class="box-footer">
                    @*<button type="submit" class="btn btn-default">Cancel</button>*@
                    @*@Html.ActionLink("Back to List", "DSSV", null, new { @class = "btn btn-default" })*@
                    <a href="/Admin/PhanDeTaiChoDotKhoaLuan/DSDT?DId=@idDotKhoaLuan" class="btn btn-default">Back to List</a>
                    <input type="submit" value="Save" class="btn btn-primary pull-right" />
                </div>
        }
    </div>

</section>
