@using ProjectManagement.Models
@model IEnumerable<ProjectManagement.Models.TaiLieu>

@{
    ViewBag.Title = "TaiLieu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string DeTaiId = ViewBag.DeTaiId + "";
}

<section class="content-header">
    <h1>Tài Liệu</h1>
</section>
<section class="content">
    <div class="row" style="padding-bottom: 10px;">
        <div class="col-md-12">
            @*@Html.ActionLink("Tạo mới", "TaiLieuCreate", null, new { @class = "btn btn-primary pull-left" })*@
            <a href="/admin/detai/TaiLieuCreate?DTId=@DeTaiId" class="btn btn-primary pull-left">tạo mới</a>
        </div>
    </div>
    <div class="box">
        <table class="table table-hover table-bordered">
            <tbody>
                <tr>
                    <th style="width: 50px">STT</th>
                    <th>
                        Mã Đề Tài
                    </th>
                    <th>
                        Tên Đề Tài
                    </th>
                    <th>
                        Tên Tài Liệu
                    </th>
                    <th>
                        Tài Liệu Đính Kèm
                    </th>
                    <th style="width: 50px; text-align: center">Chức năng</th>
                </tr>
                @{
                    int stt = 0;
                    ProjectManagementEntities db = new ProjectManagementEntities();
                }
                @foreach (var item in Model)
                {
                    stt++;
                    List<TaiLieu> userCreatedBy = db.TaiLieux.ToList();
                    <tr>
                        <td>@stt</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeTaiId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeTai.TenDeTai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenTaiLieu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TepTinDinhKem)
                        </td>
                        <td align="center">
                            @*@Html.ActionLink("Sửa", "Edit", new {id = item.USER_ID}) |
                                @Html.ActionLink("Xóa", "Delete", new {id = item.USER_ID})*@
                            <ul class="contro_function" style="width: 70px">
                                <li>
                                    <a title="Cập nhật" href="@Url.Action("Edit", new { id = item.DeTaiId })">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </li>
                                <li>|</li>
                                <li>
                                    <a title="Xóa" href="@Url.Action("Delete", new { id = item.DeTaiId })">
                                        <i class="fa fa-remove" style="color:red;"></i>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>