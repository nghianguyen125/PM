@using ProjectManagement.Models
@model ProjectManagement.Models.TinTuc

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>Tạo mới Tin</h1>
</section>
<section class="content">
    @{
        int countError = ViewBag.CountError != null ? (int)ViewBag.CountError : 0;
        if (countError > 0)
        {
            @Html.ValidationSummary(true)
            @Html.ValidationMessage("error", "", new { @class = "alert alert-danger alert-dismissable", style = "text-align:left; display: block" })
        }
    }
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Tạo mới Tin</h3>
        </div>

        @using (Html.BeginForm("Create", "TinTuc", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="box-body">
                <div class="form-group">
                    @Html.Label("Mã Tin", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TinTucId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TinTucId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Tiêu Đề", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TieuDe, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TieuDe)
                    </div>
                </div>
                    <div class="form-group">
                        @Html.Label("Nội Dung", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.NoiDung, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NoiDung)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Ngày Đăng", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.NgayDang, new { @class = "form-control" })

                            @*DATETIME*@
                            @*@Html.TextBox("YourTextBox", "", new { @class = "date-picker" })*@
                            @Html.ValidationMessageFor(model => model.NgayDang)
                        </div>
                    </div>
            </div>
            <div class="box-footer">
                @*<button type="submit" class="btn btn-default">Cancel</button>*@
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                <input type="submit" value="Save" class="btn btn-primary pull-right" />
            </div>
        }
    </div>
</section>
<!-- Code to wire up your DatePicker -->
<script type="text/javascript">
    $(function () {
        // This will make every element with the class "date-picker" into a DatePicker element
        $('.date-picker').datepicker();
    })
</script>