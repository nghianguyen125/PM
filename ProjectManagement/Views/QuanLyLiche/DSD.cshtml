@using ProjectManagement.Models
@model IEnumerable<ProjectManagement.Models.QuanLyLich>
@{
    ViewBag.Title = "DSD";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string DKLId = ViewBag.DKLId + "";
}

<section class="content-header">
    <h1>Quản Lý Lịch</h1>
</section>
<section class="content">
    <div class="row" style="padding-bottom: 10px;">
        <div class="col-md-12">
            @*@Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary pull-left" })*@
            <a href="/Admin/QuanLyLiche/Create?DKId=@DKLId" class="btn btn-primary pull-left">Tạo mới</a>
        </div>
    </div>
    <div class="box">
        <table class="table table-hover table-bordered">
            <tbody>
                <tr>
                    <th style="width: 50px">STT</th>
                    <th>
                        Đợt Khóa Luận
                    </th>
                    <th>
                        Mốc Thời Gian
                    </th>
                    <th>
                        Nội Dung
                    </th>
                    <th style="width: 50px; text-align: center">Chức năng</th>
                </tr>
                @{
                    int stt = 0;
                    ProjectManagementEntities db = new ProjectManagementEntities();
                }
                @foreach (var item in Model)
                {
                    stt++;
                    List<QuanLyLich> userCreatedBy = db.QuanLyLiches.ToList();
                    <tr>
                        <td>@stt</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DotKhoaLuan.TenDotKhoaLuan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MocThoiGian)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoiDung)
                        </td>
                        <td align="center">
                            @*@Html.ActionLink("Sửa", "Edit", new {id = item.USER_ID}) |
                                @Html.ActionLink("Xóa", "Delete", new {id = item.USER_ID})*@
                            <ul class="contro_function" style="width: 70px">
                                <li>
                                    <a title="Cập nhật" href="@Url.Action("Edit", new { DId = item.DotKhoaLuanId})">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </li>
                                <li>|</li>
                                <li>
                                    <a title="Xóa" href="@Url.Action("Delete", new { DId = item.DotKhoaLuanId})">
                                        <i class="fa fa-remove" style="color:red;"></i>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="box-footer">
        @*<button type="submit" class="btn btn-default">Cancel</button>*@
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    </div>
</section>