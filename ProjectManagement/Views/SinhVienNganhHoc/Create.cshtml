@using ProjectManagement.Models
@model ProjectManagement.Models.SinhVienNganhHoc

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string tenNganh = ViewBag.TenNganh + "";
    string idNganh = ViewBag.IdNganh + "";
}

<section class="content-header">
    <h1>Sinh Viên</h1>
</section>
<section class="content">
    @{
        int countError = ViewBag.CountError != null ? (int)ViewBag.CountError : 0;
        if (countError > 0)
        {
            @Html.ValidationSummary(true)
            @Html.ValidationMessage("error", "", new { @class = "alert alert-danger alert-dismissable", style = "text-align:left; display: block" })
        }
    }
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Tên Ngành: <strong>@tenNganh</strong></h3>
        </div>

        @using (Html.BeginForm("Create", "SinhVienNganhHoc", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="box-body">
                <div class="form-group">
                    @Html.Label("Ngành", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("NganhId", null, String.Empty, new { @class = "form-control", required = "required", @readonly = "true" })
                        @*@Html.TextBoxFor(model => model.NganhId, new { @class = "form-control", @readonly = true })*@
                        @Html.ValidationMessageFor(model => model.NganhId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Tên Sinh viên", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("SinhVienId", null, String.Empty, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.SinhVienId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Ngày Bắt đầu", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*<input type="date" value="submit" id="TuNgay"/>*@
                        @Html.TextBoxFor(model => model.TuNgay, new { @class = "form-control", type = "date", required = "required" })
                        @Html.ValidationMessageFor(model => model.TuNgay)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Đến Ngày", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*<input type="date" value="submit" id="TuNgay"/>*@
                        @Html.TextBoxFor(model => model.DenNgay, new { @class = "form-control", type = "date", required = "required" })
                        @Html.ValidationMessageFor(model => model.DenNgay)
                    </div>
                </div>
            </div>
            <div class="box-footer">
                @*<button type="submit" class="btn btn-default">Cancel</button>*@
                @*@Html.ActionLink("Back to List", "DSSV", null, new { @class = "btn btn-default" })*@
                <a href="/Admin/SinhVienNganhHoc/DSSV?NId=@idNganh" class="btn btn-default">Back to List</a>
                <input type="submit" value="Save" class="btn btn-primary pull-right" />
            </div>
        }
    </div>
</section>
