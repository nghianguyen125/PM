@model ProjectManagement.Models.Nganh

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <h1>Ngành</h1>
</section>
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Bạn có chắc muốn xóa?</h3>
        </div>
        <dl class="dl-horizontal">
            <dt>
                Mã Ngành học:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NganhId)
            </dd>
            <dt>
                Họ tên:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TenNganh)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.Khoa.KhoaId)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="box-footer">
                @*<button type="submit" class="btn btn-default">Cancel</button>*@
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                <input type="submit" value="Delete" class="btn btn-primary pull-right" />
            </div>
        }
    </div>
</section>
