@model ProjectManagement.Models.SinhVienThuocNhomSV

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string tenNhom = ViewBag.TenNhom + "";
    string idNhom = ViewBag.IdNhom + "";
}

<section class="content-header">
    <h1>Cập nhật sinh viên</h1>
</section>
<section class="content">
    @{
    int countError = ViewBag.CountError != null ? (int)ViewBag.CountError : 0;
    if (countError > 0)
    {
    @Html.ValidationSummary(true)
    @Html.ValidationMessage("error", "", new { @class = "alert alert-danger alert-dismissable", style = "text-align:left; display: block" })
    }
    }
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title"><strong>@tenNhom</strong></h3>
        </div>
        @using (Html.BeginForm("Edit", "SinhVienThuocNhomSV", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.NhomSVId)
        @Html.HiddenFor(model => model.SinhVienId)
        <div class="form-group">
            @Html.Label("Ngày Phân", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*<input type="date" value="submit" id="TuNgay" />*@
                @Html.TextBoxFor(model => model.NgayPhan, new { @class = "form-control", type = "date", required = "required" })
                @Html.ValidationMessageFor(model => model.NgayPhan)
            </div>
        </div>
        <div class="box-footer">
            @*<button type="submit" class="btn btn-default">Cancel</button>*@
            @*@Html.ActionLink("Back to List", "DSSV", null, new { @class = "btn btn-default" })*@
            <a href="/Admin/SinhVienThuocNhomSV/DSSV?NId=@idNhom" class="btn btn-default">Back to List</a>
            <input type="submit" value="Save" class="btn btn-primary pull-right" />
        </div>
        }
    </div>

</section>
