@using ProjectManagement.Models
@model ProjectManagement.Models.SinhVienThuocNhomSV

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string tenNhom = ViewBag.TenNhomSV + "";
    string idNhom = ViewBag.IdNhomSV + "";
}

<section class="content-header">
    <h1>Nhóm Sinh Viên</h1>
</section>
<section class="content">
    @{
        int countError = ViewBag.CountError != null ? (int)ViewBag.CountError : 0;
        if (countError > 0)
        {
            @Html.ValidationSummary(true)
            @Html.ValidationMessage("error", "", new { @class = "alert alert-danger alert-dismissable", style = "text-align:left; display: block" })
        }
    }
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Tên Nhóm: <strong>@tenNhom</strong></h3>
        </div>

        @using (Html.BeginForm("Create", "SinhVienThuocNhomSV", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="box-body">
                <div class="form-group">
                    @Html.Label("Mã Nhóm", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("NhomSVId", null, "Chọn Sinh Viên", new { @class = "form-control", required = "required", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.NhomSVId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Tên Sinh viên", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("SinhVienId", null, String.Empty, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.SinhVienId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Ngày Phân", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*<input type="date" value="submit" id="TuNgay"/>*@
                        @Html.TextBoxFor(model => model.NgayPhan, new { @class = "form-control", type = "date", required = "required" })
                        @Html.ValidationMessageFor(model => model.NgayPhan)
                    </div>
                </div>
            </div>
            <div class="box-footer">
                @*<button type="submit" class="btn btn-default">Cancel</button>*@
                @*@Html.ActionLink("Back to List", "DSSV", null, new { @class = "btn btn-default" })*@
                <a href="/Admin/SinhVienThuocNhomSV/DSSV?NId=@idNhom" class="btn btn-default">Back to List</a>
                <input type="submit" value="Save" class="btn btn-primary pull-right" />
            </div>
        }
    </div>
</section>
