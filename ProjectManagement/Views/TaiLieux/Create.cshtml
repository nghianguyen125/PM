@model ProjectManagement.Models.TaiLieu

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>Tài Liệu</h1>
</section>
<section class="content">
    @{
        int countError = ViewBag.CountError != null ? (int)ViewBag.CountError : 0;
        if (countError > 0)
        {
            @Html.ValidationSummary(true)
            @Html.ValidationMessage("error", "", new { @class = "alert alert-danger alert-dismissable", style = "text-align:left; display: block" })
        }
    }
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Tạo Tài Liệu</h3>
        </div>

        @using (Html.BeginForm("Create", "TaiLieux", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="box-body">
                <div class="form-group">
                    @Html.Label("Mã Tài Liệu", new { @class = "control-label col-md-2", required = "required" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TaiLieuId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TaiLieuId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Tên Tài Liệu", new { @class = "control-label col-md-2", required = "required" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TenTaiLieu, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TenTaiLieu)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("File Đính Kèm", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" id="TepTinDinhKem" name="TepTinDinhKem" />
                    </div>
                </div>
            </div>
            <div class="box-footer">
                @*<button type="submit" class="btn btn-default">Cancel</button>*@
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                <input type="submit" value="Save" class="btn btn-primary pull-right" />
            </div>
        }
    </div>
</section>
