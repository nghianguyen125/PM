@using ProjectManagement.Models
@model IEnumerable<ProjectManagement.Models.TaiLieu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string DeTaiId = ViewBag.DeTaiId + "";
    //string tenDeTai = ViewBag.tenDeTai + "";
}
<section class="content-header">
    <h1>Sinh Viên / Khóa Học</h1>
</section>
<section class="content">
    @*<h1>@tenDeTai</h1>*@
    <div class="row" style="padding-bottom: 10px;">
        <div class="col-md-12">
            @*@Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary pull-left" })*@
            <a href="/Admin/TaiLieux/Create?DTId=@DeTaiId" class="btn btn-primary pull-left">Tạo mới</a>
        </div>
    </div>
    <div class="box">
        <table class="table table-hover table-bordered">
            <tbody>
                <tr>
                    <th style="width: 50px">STT</th>
                    <th>
                        Mã Tài Liệu
                    </th>
                    <th>
                        Tên Tài Liệu
                    </th>
                    <th>
                        Tệp Đính Kèm
                    </th>
                    <th style="width: 50px; text-align: center">Chức năng</th>
                </tr>
                @{
                    int stt = 0;
                    ProjectManagementEntities db = new ProjectManagementEntities();
                }
                @foreach (var item in Model)
                {
                    stt++;
                    List<TaiLieu> userCreatedBy = db.TaiLieux.ToList();
                    <tr>
                        <td>@stt</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TaiLieuId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenTaiLieu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TepTinDinhKem)
                        </td>
                        <td align="center">
                            @*@Html.ActionLink("Sửa", "Edit", new {id = item.USER_ID}) |
                                @Html.ActionLink("Xóa", "Delete", new {id = item.USER_ID})*@
                            <ul class="contro_function" style="width: 70px">
                                <li>
                                    <a title="Chỉnh Sửa" href="@Url.Action("Edit", new { DTId = item.DeTaiId })">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </li>
                                <li>|</li>
                                <li>
                                    <a title="Xóa" href="@Url.Action("Delete", new { DTId = item.DeTaiId })">
                                        <i class="fa fa-remove" style="color:red;"></i>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>



        </table>
    </div>
    <div class="box-footer">
        @*<button type="submit" class="btn btn-default">Cancel</button>*@
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    </div>
</section>
