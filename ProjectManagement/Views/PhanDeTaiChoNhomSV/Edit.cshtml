@model ProjectManagement.Models.PhanDeTaiChoNhomSV

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>Cập nhật</h1>
</section>
<section class="content">
    @{
        int countError = ViewBag.CountError != null ? (int)ViewBag.CountError : 0;
        if (countError > 0)
        {
            @Html.ValidationSummary(true)
            @Html.ValidationMessage("error", "", new { @class = "alert alert-danger alert-dismissable", style = "text-align:left; display: block" })
        }
    }
    <div class="box box-info">
        @using (Html.BeginForm("Edit", "PhanDeTaiChoNhomSV", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="box-body">

                @Html.HiddenFor(model => model.NhomSVId)
                <div class="form-group">
                    @Html.Label("Tên Nhóm", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("NhomSVId", null, String.Empty, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.NhomSV.TenNhom)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Tên Đề Tài", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("DeTaiId", null, String.Empty, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.DeTai.TenDeTai)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Ngày Phân Đề Tài", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*<input type="date" value="submit" id="TuNgay"/>*@
                        @Html.TextBoxFor(model => model.NgayPhanDeTai, new { @class = "form-control", type = "date", required = "required" })
                        @Html.ValidationMessageFor(model => model.NgayPhanDeTai)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Ghi Chú", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.GhiChu, new { @class = "form-control", @placeholder = "Nhập ghi chú...", @cols = "80", @rows = "4" })
                        @Html.ValidationMessageFor(model => model.GhiChu)
                    </div>
                </div>
            </div>
            <div class="box-footer">
                @*<button type="submit" class="btn btn-default">Cancel</button>*@
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                <input type="submit" value="Save" class="btn btn-primary pull-right" />
            </div>
        }
    </div>

</section>
