@model ProjectManagement.Models.SinhVien

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <h1>Sinh Viên</h1>
</section>
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Bạn có chắc muốn xóa?</h3>
        </div>
        <dl class="dl-horizontal">
            <dt>
                Mã Sinh viên:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SinhVienId)
            </dd>
            <dt>
                Tên Sinh viên:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.HoTen)
            </dd>
            <dt>
                Giới tính:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.GioiTinh)
            </dd>
            <dt>
                Ngày sinh:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NgaySinh)
            </dd>
            <dt>
                Số TCHT:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SoTCHT)
            </dd>
            <dt>
                Số TCCL:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SoTCCL)
            </dd>
            <dt>
                Trạng thái:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TrangThai)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="box-footer">
                @*<button type="submit" class="btn btn-default">Cancel</button>*@
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                <input type="submit" value="Delete" class="btn btn-primary pull-right" />
            </div>
        }
    </div>
</section>
