@model ProjectManagement.Models.SinhVien

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>Sinh Viên</h1>
</section>
<section class="content">
    @{
        int countError = ViewBag.CountError != null ? (int)ViewBag.CountError : 0;
        if (countError > 0)
        {
            @Html.ValidationSummary(true)
            @Html.ValidationMessage("error", "", new { @class = "alert alert-danger alert-dismissable", style = "text-align:left; display: block" })
        }
    }
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Tạo mới Sinh viên</h3>
        </div>

        @using (Html.BeginForm("Create", "SinhVien", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="box-body">
                <div class="form-group">
                    @Html.Label("Mã Sinh viên", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.SinhVienId, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.SinhVienId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Tên Sinh viên", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.HoTen)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Gioi Tinh", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.CheckBoxFor(model => model.GioiTinh, new { @checked = "checked" })
                        @Html.ValidationMessageFor(model => model.GioiTinh)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Ngày sinh", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.NgaySinh, "{ 0:dd/MM/yyyy}", new { @class = "form-control", type = "date", required = "required" })
                        @Html.ValidationMessageFor(model => model.NgaySinh)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Số TCHT", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.SoTCHT, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.SoTCHT)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Số TCCL", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.SoTCCL, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.SoTCCL)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Trạng thái", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.CheckBoxFor(model => model.TrangThai, new { @checked = "checked" })
                        @Html.ValidationMessageFor(model => model.TrangThai)
                    </div>
                </div>
            </div>
            <div class="box-footer">
                @*<button type="submit" class="btn btn-default">Cancel</button>*@
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                <input type="submit" value="Save" class="btn btn-primary pull-right" />
            </div>
        }
    </div>
</section>
